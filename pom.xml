    <artifactId>boilerplate-spigot</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <name>boilerplate-spigot</name>
    <description>Boilerplate code and files for Spigot.</description>
    <url>https://www.github.com/0x66ff66/boilerplate-spigot</url>

    <properties>
        <author>0x66FF66</author>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

